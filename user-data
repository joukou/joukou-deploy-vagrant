  - path: /root/.dockercfg
    owner: root:root
    permissions: 0644
    content: |
      {
        "https://quay.io/v1/": {
          "auth": "am91a291K2NvcmVvczoyR01GVVFaTzFLVFgyNDdQUkJMMDRVS05MNk1PRExSVDI2UTVPNjZNWUlXTjRWMUIwSjBCRFdPMkVKWFRYMllU",
